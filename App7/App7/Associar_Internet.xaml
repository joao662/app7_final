<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.Associar_Internet">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="Picker" Title="Pessoas">
                <Picker.Items></Picker.Items>
            </Picker>

            <Entry x:Name="Entry" Placeholder="E-mail" />
            <Entry x:Name="Entry1" Placeholder="Site" />

            <Button x:Name="Botao" Text="Associar Internet"
            VerticalOptions="EndAndExpand"
            HorizontalOptions="Center" 
            Clicked="OnButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>