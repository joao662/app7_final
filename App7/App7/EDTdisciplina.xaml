<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.EDTdisciplina">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="PickerListaDisciplinasExistentes" Title="Disciplinas">
            </Picker>
            <Entry x:Name="NomeDisciplinas" Placeholder="Nome da disciplina"/>
            <Entry x:Name="EntryHoras" Placeholder="Horas"/>
            <Picker x:Name="PickerPreRequisito" Title="Pré-requisito">
            </Picker>
            <Button x:Name="ButtonSalvar"
                    Clicked="ButtonSalvar_Clicked"
                    Text="Salvar"
                    HorizontalOptions="Center"/>
            <Button x:Name="ButtonExcluir"
                    Clicked="ButtonExcluir_Clicked"
                    Text="Excluir"
                    HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>