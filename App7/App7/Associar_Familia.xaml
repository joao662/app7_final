<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.Associar_Familia">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="Picker" Title="Pessoa">
                <Picker.Items></Picker.Items>
            </Picker>

            <Entry x:Name="Entry" Placeholder="Nome" />
            <Entry x:Name="Entry1" Placeholder="CPF" />
            <Entry x:Name="Entry2" Placeholder="Tipo de parentesco" />

            <Button x:Name="Botao" Text="Associar"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="Center" 
                Clicked="OnButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>